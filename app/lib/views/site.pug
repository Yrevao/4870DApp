doctype html

html
    head
        link(rel='stylesheet' type='text/css' href='/style.css')
        title #{site.name}
    body
        div
            | Choose an Asset:
            select(id='assets')
                each asset in site.assets
                    option(value = `{"name":"${asset.name}", "price": ${asset.price}}`) Name: #{asset.name} Price: #{asset.price} Owned: #{asset.owned}
        div
            | Address:
            textarea(id='address', cols='100', rows='1')=addr
        div
            | Action:
            button(id='receive') Receive
            button(id='send') Send
            button(id='confirm') Confirm
    
    script(src='/site.js')
